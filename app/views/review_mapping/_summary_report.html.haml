%link{:href => "/assets/summary.css", :rel => "stylesheet", :type => "text/css"}/
%script{:src => "/assets/summary.js", :type => "text/javascript"}
.reviewreport
  %table{:class => "table table-striped"}
    - for i in 0..@assignment.rounds_of_reviews-1
      %tr.fake-link-large{:bgcolor => "", "data-target" => "#round_#{(i+1).to_s}", "data-toggle" => "collapse"}
        %td{:style => "padding: 10px;"}
          %h5
            Round #{(i+1).to_s} | Average score : #{@avg_scores_by_round[i].to_s}%
      %tr
        %td.data_column
          .collapse.in{:id => "round_#{(i+1).to_s}"}
            %table.table.table_striped
              - @summary[i].keys.each do |question|
                %tr{:bgcolor => "#f2f2f2" }
                  %td
                    %h5
                      - safe_concat question
                      %div{:style => "text-decoration: underline overline;"} Average score: #{@avg_scores_by_criterion[i][question].to_s}%
                %tr
                  %td
                    - if !@summary[i][question].eql?("")
                      - @summary[i][question].each do |sentence|
                        - safe_concat "<li>"
                        - concat sentence
                    - else
                      - safe_concat "&nbsp;"